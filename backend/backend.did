type Person = 
 record {
   avatar: text;
   id: nat;
   name: text;
   percentage: float64;
 };
service : {
  getBillDetails: () ->
   (record {
      billAmount: opt float64;
      people: vec Person;
      totalPercentage: float64;
    }) query;
  setBillAmount: (float64) -> ();
  updatePersonPercentage: (nat, float64) -> (bool);
}
